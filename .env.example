# Streamlit app
PPLX_API_KEY=REPLACE_WITH_PERPLEXITY_KEY
PPLX_MODEL=sonar
SAP_AGENT_BASE_URL=https://your-agent.stage.example.com/api/v1/
SAP_AGENT_OAUTH_URL=https://your-agent.authentication.example.com/oauth/token
SAP_AGENT_CLIENT_ID=your_agent_client_id
SAP_AGENT_CLIENT_SECRET=your_agent_client_secret
SAP_AGENT_UI_BASE_URL=https://agents.example.com/ui/index.html#/agents

# Optional SAP HANA backend
HANA_HOST=your_hana_host
HANA_PORT=443
HANA_USER=your_hana_user
HANA_PASSWORD=your_hana_password
HANA_CATALOG_SCHEMA=AGENT_CATALOG
HANA_CREATED_BY=SAP_JOULE_APP

# Tool attachments (used when creating the agent and attaching tools)
# Perplexity destination tool
PPLX_DESTINATION=perplexity
# Override tool type if your landscape expects a specific type (e.g., bringyourown)
PPLX_TOOL_TYPE=bringyourown

# HANA datasource tool
# Prefer a working schema for the agent; falls back to HANA_CATALOG_SCHEMA if unset
HANA_SCHEMA=your_hana_schema
# Optional human approval flags for HANA tool; leave empty to disable
HANA_HUMAN_APPROVAL=
HANA_HUMAN_APPROVAL_PROMPT=

# SAP AI Core (Generative AI Hub) credentials
AICORE_BASE_URL=
AICORE_AUTH_URL=
AICORE_RESOURCE_GROUP=default
AICORE_DEPLOYMENT_ID=gpt-5
AICORE_CLIENT_ID=
AICORE_CLIENT_SECRET=
AICORE_TEMPERATURE=0.2
